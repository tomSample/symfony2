<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <header>
        <nav class="navbar">
            <ul class="navbar-list">
                <li class="navbar-item"><a class="navbar-link" href="{{ path('app_home') }}">Accueil</a></li>
                <li class="navbar-item"><a class="navbar-link" href="{{ path('app_projects') }}">Projets</a></li>
                <li class="navbar-item"><a class="navbar-link" href="{{ path('app_about') }}">Parcours</a></li>
                <li class="navbar-item"><a class="navbar-link" href="{{ path('app_contact') }}">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main id="main-content">
        {% block body %}{% endblock %}
    </main>

    <footer>
        <p>&copy; 2024 Mon Portfolio</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const links = document.querySelectorAll('.navbar-link');
            const mainContent = document.getElementById('main-content');

            links.forEach(link => {
                link.addEventListener('click', function(event) {
                    event.preventDefault();
                    const url = this.getAttribute('href');

                    mainContent.classList.add('fade-leave-active');
                    setTimeout(() => {
                        window.location.href = url;
                    }, 500); // Duration of the fade-out transition
                });
            });

            mainContent.classList.add('fade-enter');
            setTimeout(() => {
                mainContent.classList.remove('fade-enter');
            }, 500); // Duration of the fade-in transition
        });
    </script>
</body>
</html>